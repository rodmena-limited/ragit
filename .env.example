# Ragit Configuration

# Ollama LLM API (cloud)
OLLAMA_BASE_URL=https://ollama.com
OLLAMA_API_KEY=your-api-key-here
OLLAMA_TIMEOUT=120

# Ollama Embedding API (local - cloud doesn't support embeddings)
OLLAMA_EMBEDDING_URL=http://localhost:11434

# Default Models
RAGIT_DEFAULT_LLM_MODEL=qwen3-vl:235b-instruct
# Options: nomic-embed-text (768d), mxbai-embed-large (1024d), qwen3-embedding:8b (4096d)
RAGIT_DEFAULT_EMBEDDING_MODEL=mxbai-embed-large

# Logging
RAGIT_LOG_LEVEL=INFO
